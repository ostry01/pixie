%table.table.table-striped
  %tr
    %th="Email"
    %th="Usuń"
  - users.each do |user|
    %tr
      %td=link_to user.email, user_path(user)
      %td=link_to 'Usuń', user, :method => :delete, :data => { :confirm => 'Jesteś pewny?' }, class: 'btn btn-default'
.paginate
  = will_paginate users, renderer: BootstrapPagination::Rails
